<div class="login-background">
<span class="login-header">LOGIN</span>
  <div class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-field">
        <%= f.label :email, class:"login-email-label"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-field-color" %>
      </div>

      <div class="login-field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class:"login-field-color" %>
      </div>
    <% if devise_mapping.rememberable? %>
      <div class="login-remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %> 
      </div>
    </div>
    <% end %>

    
  

    <div class="login-image-container">
    <%= image_tag("loginboxes.png", id: "login-packages") %>
    <%= f.submit "Log in", class: "login-submit" %>
  <% end %>
    <%= link_to "SIGN-UP", new_registration_path(resource_name), class: "login-sign-up" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-forgot-password" %>
    </div>
</div>
